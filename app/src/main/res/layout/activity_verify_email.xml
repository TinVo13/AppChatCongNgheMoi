<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyEmail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/ic_logo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác thực OTP"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chungs tôi sẽ gửi mã OTP đến địa chỉ email của bạn. Vui lòng không cung cấp mã OTP này cho bất cứ ai!"
            android:textAlignment="center"
            android:layout_margin="20dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxCornerRadiusBottomEnd="50dp"
            app:boxCornerRadiusBottomStart="50dp"
            app:boxCornerRadiusTopEnd="50dp"
            app:boxCornerRadiusTopStart="50dp"
            android:layout_margin="20dp"
            app:startIconDrawable="@drawable/ic_mail">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Nhập địa chỉ email của bạn"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:textColorHint="@color/text_color_hint"
                android:textColorLink="@color/text_color_hint" />
            <Button
                android:id="@+id/btnGuiOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gửi mã OTP"
                app:cornerRadius="50dp"
                android:layout_marginTop="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</ScrollView>